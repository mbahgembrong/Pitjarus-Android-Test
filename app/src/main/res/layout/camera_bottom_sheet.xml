<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">
    <androidx.camera.view.PreviewView
            android:layout_height="wrap_content"
            android:layout_width="300dp" android:id="@+id/previewCamera"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonTakeCamera" app:layout_constraintHorizontal_bias="0.5">
    </androidx.camera.view.PreviewView>
    <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonTakeCamera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ambil Gambar"
            android:textSize="16sp"
            app:cornerRadius="20dp"
            android:textAllCaps="false"
            android:backgroundTint="@color/blue" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintTop_toBottomOf="@+id/previewCamera" android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
